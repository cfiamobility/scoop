<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/medium_blue</item>
        <item name="colorPrimaryDark">@color/medium_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for the app action bar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Theme for the app action bar in the search view-->
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textCursorDrawable">@drawable/blue_cursor</item>
    </style>
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mySpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Theme for EditText Inputs -->
    <style name="TextInputLayoutAppearance" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/secondary</item>
        <item name="colorControlNormal">@color/black</item>
    </style>
</resources>
