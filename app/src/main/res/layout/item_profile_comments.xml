<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="41dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/date"
            android:layout_toEndOf="@+id/profile_image"
            android:fontFamily="@font/roboto"
            android:text="@string/name"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/roboto"
            android:text="2019-01-01"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Replying to Chun Wu's Post"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/roboto"
            android:text="TextView"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/up_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/post_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />

        <ImageView
            android:id="@+id/down_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_text"
            android:layout_marginStart="6dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/up_vote"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

        <TextView
            android:id="@+id/vote_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/post_text"
            android:layout_marginStart="6dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/down_vote"
            android:fontFamily="@font/open_sans_light"
            android:text="2"
            android:textSize="12sp" />

        <View
            android:id="@+id/horizontalDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/vote_count"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/listDivider" />
    </RelativeLayout>
</LinearLayout>