<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CreatePostScreen">

    <Button
        android:id="@+id/backButton"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="14dp"
        android:background="?attr/actionModeCloseDrawable"
        android:backgroundTint="@color/black"
        android:onClick="returnToPrevious" />

    <TextView
        android:id="@+id/createAPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/create_a_post"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="51dp"
        android:layout_height="53dp"
        android:layout_below="@+id/backButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        android:contentDescription="TODO" />

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createAPost"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/profileImage"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/open_sans_bold"
        android:hint="@string/title"
        android:importantForAutofill="no"
        android:inputType="textCapSentences|textAutoCorrect|text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/postEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="@string/post_template"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
        android:textSize="14sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/postEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/cameraButton"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_menu_camera"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/cameraButton"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/postButton"
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@+id/createAPost"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/medium_blue"
        android:fontFamily="@font/open_sans_bold"
        android:onClick="returnToPrevious"
        android:text="@string/post"
        android:textColor="@color/white" />

</RelativeLayout>