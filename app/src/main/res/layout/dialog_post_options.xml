<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/fragment_profile_tl_social_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <TableRow
            android:id="@+id/dialog_post_options_tr_share"
            android:layout_marginStart="40dp">

            <ImageView
                android:id="@+id/dialog_post_options_img_share"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/ic_share_secondary_24dp" />

            <Button
                android:id="@+id/dialog_post_options_btn_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="4dp"
                android:layout_marginEnd="213dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:text="@string/share"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </TableRow>


        <TableRow
            android:id="@+id/dialog_post_options_tr_save"
            android:layout_marginStart="40dp">

            <ImageView
                android:id="@+id/dialog_post_options_img_save"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/ic_save_secondary_24dp" />

            <Button
                android:id="@+id/dialog_post_options_btn_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="213dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:text="@string/save"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </TableRow>


        <TableRow
            android:id="@+id/dialog_post_options_tr_delete"
            android:layout_marginStart="40dp">

            <ImageView
                android:id="@+id/dialog_post_options_img_delete"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/ic_delete_secondary_24dp" />

            <Button
                android:id="@+id/dialog_post_options_btn_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="4dp"
                android:layout_marginEnd="213dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:text="@string/delete"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/dialog_post_options_tr_report"
            android:layout_marginStart="40dp">

            <ImageView
                android:id="@+id/dialog_post_options_img_report"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:srcCompat="@drawable/ic_report_secondary_24dp" />

            <Button
                android:id="@+id/dialog_post_options_btn_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="4dp"
                android:layout_marginEnd="213dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:text="@string/report"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>