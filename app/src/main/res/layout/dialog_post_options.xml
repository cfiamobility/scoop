<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/dialog_post_options_btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="213dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="@string/share"
        android:textAlignment="viewStart" />

    <ImageView
        android:id="@+id/dialog_post_options_img_share"
        android:layout_width="53dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/dialog_post_options_btn_share"
        app:srcCompat="@drawable/ic_share_secondary_24dp" />

    <Button
        android:id="@+id/dialog_post_options_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_post_options_btn_share"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="213dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="@string/save"
        android:textAlignment="textStart" />

    <ImageView
        android:id="@+id/dialog_post_options_img_save"
        android:layout_width="53dp"
        android:layout_height="34dp"
        android:layout_below="@+id/dialog_post_options_img_share"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/dialog_post_options_btn_save"
        app:srcCompat="@drawable/ic_save_secondary_24dp" />

    <Button
        android:id="@+id/dialog_post_options_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_post_options_btn_save"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="213dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="@string/delete"
        android:textAlignment="textStart" />

    <ImageView
        android:id="@+id/dialog_post_options_img_delete"
        android:layout_width="53dp"
        android:layout_height="34dp"
        android:layout_below="@+id/dialog_post_options_img_save"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/dialog_post_options_btn_delete"
        app:srcCompat="@drawable/ic_delete_secondary_24dp" />

    <Button
        android:id="@+id/dialog_post_options_btn_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_post_options_btn_delete"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="213dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto"
        android:text="@string/report"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/dialog_post_options_img_report"
        android:layout_width="53dp"
        android:layout_height="34dp"
        android:layout_below="@+id/dialog_post_options_img_delete"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/dialog_post_options_btn_report"
        app:srcCompat="@drawable/ic_report_secondary_24dp" />

</RelativeLayout>