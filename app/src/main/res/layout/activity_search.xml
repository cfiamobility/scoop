<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/activity_search_layout">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_search_vp_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_search_tl_search"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-0dp"
        android:layout_marginEnd="0dp" />

    <include
        android:id="@+id/activity_search_toolbar"
        layout="@layout/toolbar_search"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_search_tl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_search_toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        app:tabIndicatorColor="@color/secondary">
    </android.support.design.widget.TabLayout>


</RelativeLayout>