<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="268dp"
        android:background="@android:color/transparent"
        android:text="@string/share"
        android:textAlignment="viewStart" />

    <ImageView
        android:id="@+id/shareImage"
        android:layout_width="53dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="-7dp"
        android:layout_toStartOf="@+id/shareButton"
        app:srcCompat="@drawable/ic_menu_share" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shareButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="266dp"
        android:background="@android:color/transparent"
        android:text="@string/save"
        android:textAlignment="textStart" />

    <ImageView
        android:id="@+id/saveImage"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_below="@+id/shareImage"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/saveButton"
        app:srcCompat="@drawable/ic_save_black_24dp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saveButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="268dp"
        android:background="@android:color/transparent"
        android:text="@string/delete"
        android:textAlignment="textStart" />

    <ImageView
        android:id="@+id/deleteImage"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_below="@+id/saveImage"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/deleteButton"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

    <Button
        android:id="@+id/reportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="268dp"
        android:background="@android:color/transparent"
        android:text="@string/report"
        android:textAlignment="viewStart" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:layout_below="@+id/deleteImage"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/reportButton"
        app:srcCompat="@drawable/ic_report_black_24dp" />

</RelativeLayout>