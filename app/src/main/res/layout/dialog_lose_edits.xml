<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_lose_edits_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textAlignment="center"
        android:text="@string/edit_comment_lose_data"/>

    <Button
        android:id="@+id/dialog_lose_edits_confirm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_lose_edits_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/secondary"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:padding="15dp"
        android:text="@string/confirm"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/dialog_lose_edits_cancel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_lose_edits_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/secondary"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:padding="15dp"
        android:text="@string/cancel"
        android:textColor="@color/white" />

</RelativeLayout>