<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".profile.ProfileFragment">

    <View
        android:id="@+id/fragment_search_profile_divider"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_search_profile_img"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/fragment_search_profile_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/fragment_search_profile_img"
        android:fontFamily="@font/roboto"
        android:text="Name"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragment_search_profile_txt_position_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_search_profile_txt_name"
        android:layout_marginStart="33dp"

        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/fragment_search_profile_img"
        android:fontFamily="@font/roboto"
        android:text="Position, Division" />

    <TextView
        android:id="@+id/fragment_search_profile_txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_search_profile_txt_position_division"
        android:layout_marginStart="33dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/fragment_search_profile_img"
        android:fontFamily="@font/roboto"
        android:text="Ottawa, ON" />


</RelativeLayout>