<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_search_profile_img"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/item_search_profile_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/item_search_profile_img"
        android:fontFamily="@font/roboto"
        android:text="Name"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_search_profile_txt_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_search_profile_txt_name"
        android:layout_marginStart="33dp"

        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/item_search_profile_img"
        android:fontFamily="@font/roboto"
        android:text="Position" />

    <TextView
        android:id="@+id/item_search_profile_txt_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_search_profile_txt_position"
        android:layout_marginStart="33dp"

        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/item_search_profile_img"
        android:fontFamily="@font/roboto"
        android:text="Division" />

    <TextView
        android:id="@+id/item_search_profile_txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_search_profile_txt_division"
        android:layout_marginStart="33dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/item_search_profile_img"
        android:fontFamily="@font/roboto"
        android:text="Ottawa, ON" />

    <View
        android:id="@+id/item_search_profile_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_search_profile_txt_location"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>