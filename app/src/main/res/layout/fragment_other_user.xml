<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".profileScreen">

    <View
        android:id="@+id/otherDividerSqure"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="0dp"
        android:background="@color/light_grey" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/otherProfileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/otherProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/open_sans_bold" />

    <TextView
        android:id="@+id/otherPositionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherProfileName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/otherLocationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherPositionName"
        android:layout_alignStart="@+id/otherProfileImage"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/open_sans" />

    <ImageView
        android:id="@+id/otherLocationLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherPositionName"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/otherLocationText"
        android:src="@drawable/ic_location_on_black_24dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/otherTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherDividerSqure"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="@color/medium_blue">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/otherViewPager"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:layout_below="@+id/otherTabLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp" />

    <LinearLayout
        android:id="@+id/otherSocialMediaIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherLocationText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/otherFacebookLogo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/otherInstagramLogo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/instagram" />

        <ImageView
            android:id="@+id/otherLinkedinLogo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/linkedin" />

        <ImageView
            android:id="@+id/otherTwitterLogo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/twitter"/>
    </LinearLayout>

</RelativeLayout>