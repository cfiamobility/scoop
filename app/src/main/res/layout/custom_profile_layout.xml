<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="41dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/date"
            android:layout_toEndOf="@+id/profile_image"
            android:fontFamily="@font/open_sans_bold"
            android:text="NAME"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/options_menu"
            android:fontFamily="@font/open_sans_light"
            android:text="01-01-2019"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/options_menu"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="TITLE"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/open_sans"
            android:text="TextView"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/up_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/post_text"
            android:layout_marginStart="21dp"
            android:layout_marginTop="26dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />

        <ImageView
            android:id="@+id/down_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_text"
            android:layout_marginStart="6dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/up_vote"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

        <TextView
            android:id="@+id/vote_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/post_text"
            android:layout_marginStart="6dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/down_vote"
            android:fontFamily="@font/open_sans_light"
            android:text="2"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/comment_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_text"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/comment_count"
            app:srcCompat="@drawable/ic_mode_comment_black_24dp" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_text"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="21dp"
            android:fontFamily="@font/open_sans_light"
            android:text="2" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/down_vote"
            android:layout_marginTop="20dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>
</LinearLayout>