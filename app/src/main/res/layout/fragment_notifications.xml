<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".notif.NotificationsFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_notifications_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:descendantFocusability="blocksDescendants"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/fragment_notifications_txt_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart ="12dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/notifications_today"
                        android:fontFamily="@font/roboto"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_notifications_rv_today"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/fragment_notifications_txt_today"
                        android:layout_marginTop="0dp"
                        android:nestedScrollingEnabled="false" />
                </RelativeLayout>

            </android.support.v4.widget.NestedScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/fragment_notifications_txt_recent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="12dp"
                    android:text="@string/notifications_recent"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_notifications_rv_recent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/fragment_notifications_txt_recent" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/fragment_notifications_no_new_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_above="@id/fragment_notifications_no_new_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_notifications_active_black_24dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/fragment_notifications_no_new_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto"
                android:text="@string/notifications_no_new"
                android:textColor="@color/primary_dark"
                android:textSize="26sp"
                android:visibility="gone"/>
        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>







