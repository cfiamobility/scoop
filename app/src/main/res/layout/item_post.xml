<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_post_img_profile"
            android:layout_width="41dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/item_post_txt_name"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/item_post_txt_date"
            android:layout_toEndOf="@+id/item_post_img_profile"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:text="NAME"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_post_txt_date"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/item_post_img_options"
            android:fontFamily="@font/roboto"
            android:text="01-01-2019"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/item_post_img_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/ic_more_vert_secondary_24dp" />

        <TextView
            android:id="@+id/item_post_txt_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_post_img_profile"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="TITLE"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_post_txt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_post_txt_post_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto"
            android:text="TextView"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_post_img_up_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_post_txt_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="26dp"
            app:srcCompat="@drawable/ic_expand_less_secondary_24dp" />

        <ImageView
            android:id="@+id/item_post_img_down_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_post_txt_text"
            android:layout_marginStart="6dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/item_post_img_up_vote"
            app:srcCompat="@drawable/ic_expand_more_secondary_24dp" />

        <TextView
            android:id="@+id/item_post_txt_vote_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/item_post_txt_text"
            android:layout_marginStart="6dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/item_post_img_down_vote"
            android:fontFamily="@font/roboto"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_post_img_comments"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_post_txt_text"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/item_post_txt_comment_count"
            app:srcCompat="@drawable/ic_mode_comment_secondary_24dp" />

        <TextView
            android:id="@+id/item_post_txt_comment_count"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_post_txt_text"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="21dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="2" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item_post_img_down_vote"
            android:layout_marginTop="20dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>
</LinearLayout>