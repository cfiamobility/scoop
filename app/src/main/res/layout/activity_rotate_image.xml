<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rotateImage">

    <ImageView
        android:id="@+id/rotate_image"
        android:layout_width="330dp"
        android:layout_height="324dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="161dp"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <ImageView
        android:id="@+id/rotate_left"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_below="@+id/rotate_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/check_mark"
        app:srcCompat="@drawable/ic_rotate_left_black_24dp" />

    <ImageView
        android:id="@+id/rotate_right"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_below="@+id/rotate_image"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="60dp"
        android:layout_toEndOf="@+id/check_mark"
        app:srcCompat="@drawable/ic_rotate_right_black_24dp" />

    <ImageView
        android:id="@+id/check_mark"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_below="@+id/rotate_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        app:srcCompat="@drawable/ic_check_black_24dp" />
</RelativeLayout>